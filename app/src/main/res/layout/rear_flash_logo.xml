<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rear_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/circle_image_off" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_camera_rear_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/rear_circle"
        app:layout_constraintEnd_toEndOf="@+id/rear_circle"
        app:layout_constraintStart_toStartOf="@+id/rear_circle"
        app:layout_constraintTop_toTopOf="@+id/rear_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>